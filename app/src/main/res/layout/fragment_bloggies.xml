<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BloggiesFragment">


    <ImageView
        android:id="@+id/bloggiesImage"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@drawable/bloggies"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"

        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/bloggiesImage"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:hint="Email ?"
        />

    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        android:layout_marginTop="25dp"
        android:inputType="text"
        android:hint="Login ?"

        />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/loginEditText"
        android:layout_marginTop="25dp"
        android:hint="Password ?"
        />

    <EditText
        android:id="@+id/confirmationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="text"
        android:hint="Confirmation ?"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/connexionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#807E7E"
        android:text="@string/inscriptionBtn"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConnexionFragment">

   <ImageView
       android:id="@+id/bloggiesImageView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/bloggies"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/twitterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/twitterBtn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bloggiesImageView"
        android:layout_marginTop="100dp"
        android:backgroundTint="#9A9696"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/facebookBtn"
        android:backgroundTint="#9A9696"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/twitterBtn"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/bloggiesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnBloggies"
        android:backgroundTint="#9A9696"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/facebookBtn"
        android:layout_marginTop="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>